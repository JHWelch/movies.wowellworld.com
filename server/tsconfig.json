{
  "compilerOptions": {
    "target": "ES2020",
    "module": "ES2020",
    "outDir": "../built",
    "strict": true,
    "strictNullChecks": true,
    "moduleResolution": "node",
    "types": [
      "node"
    ],
    "lib": [
      "es6",
      "dom"
    ],
    "esModuleInterop": true,
    "skipLibCheck": true,
    "forceConsistentCasingInFileNames": true,
    "allowUnreachableCode": true,
  },
  "include": [
    "src/**/*.ts",
    "../shared/**/*.ts",
  ],
  "exclude": [
    "node_modules",
    "<node_internals>/**",
  ]
}
