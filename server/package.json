{
  "name": "movies.wowellworld.com-server",
  "version": "1.0.0",
  "description": "",
  "type": "module",
  "main": "src/index.ts",
  "scripts": {
    "clean": "rm -rf built && rm -rf emails/built && rm -rf public/app.css",
    "build": "npm run build:ts && npm run build:emails",
    "start": "node built/index.js",
    "build:ts": "tsc",
    "start:ts": "ts-node-esm src/index.ts",
    "build:emails": "mkdir -p ./emails/built && mjml --config.minify=true ./emails/*.mjml -o ./emails/built/",
    "lint": "eslint . --ext .ts",
    "fix": "eslint . --ext .ts --fix",
    "test": "jest",
    "test-watch": "jest --watch",
    "coverage": "jest --coverage",
    "watch": "npm run watch:express",
    "watch:express": "nodemon src/index.ts"
  },
  "keywords": [
    "notion",
    "movies"
  ],
  "author": "Jordan Welch",
  "license": "MIT",
  "nodemonConfig": {
    "ext": "ts,ejs",
    "execMap": {
      "ts": "ts-node --esm"
    }
  },
  "dependencies": {
    "@jhwelch/made-with": "^0.0.0",
    "@notionhq/client": "^2.2.5",
    "@types/express": "^4.17.17",
    "@types/node": "^18.16.19",
    "body-parser": "^1.20.2",
    "dotenv": "^16.0.3",
    "ejs": "^3.1.9",
    "express": "^4.18.2",
    "firebase": "^10.1.0",
    "firebase-admin": "^11.10.1",
    "path": "^0.12.7",
    "url": "^0.11.0",
    "zod": "^3.22.2"
  },
  "devDependencies": {
    "@jest-mock/express": "^2.0.2",
    "@jest/globals": "^29.5.0",
    "@tsconfig/node18": "^18.2.0",
    "eslint-plugin-promise": "^6.1.1",
    "jest": "^29.5.0",
    "mjml": "^4.14.1",
    "nodemon": "^3.0.1",
    "ts-jest": "^29.1.1",
    "ts-node": "^10.9.1",
    "typescript": "^5.2.2"
  }
}
