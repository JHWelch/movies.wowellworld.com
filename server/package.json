{
  "name": "movies.wowellworld.com-server",
  "private": true,
  "version": "2.0.0",
  "type": "module",
  "main": "src/index.ts",
  "scripts": {
    "cli": "tsx src/cli.ts",
    "dev": "nodemon src/index.ts",
    "firebase": "firebase emulators:start --import emulator-cache",
    "firebase:export": "firebase emulators:export emulator-cache",
    "build": "tsc -p tsconfig.build.json && tsc-alias -p tsconfig.build.json --resolve-full-paths",
    "postbuild": "npm prune --omit=dev && mv node_modules ../built/node_modules",
    "test": "jest",
    "test:watch": "jest --watch",
    "types": "tsc --noEmit",
    "coverage": "jest --coverage"
  },
  "nodemonConfig": {
    "ext": "ts,ejs",
    "execMap": {
      "ts": "tsx --tsconfig tsconfig.build.json"
    }
  },
  "dependencies": {
    "@jhwelch/made-with": "^0.0.3",
    "@notionhq/client": "^5.0.0",
    "body-parser": "^2.2.0",
    "dotenv": "^17.2.3",
    "ejs": "^3.1.10",
    "express": "^5.1.0",
    "firebase": "^12.3.0",
    "firebase-admin": "^13.5.0",
    "ics": "^3.8.1",
    "luxon": "^3.7.2",
    "path": "^0.12.7",
    "url": "^0.11.0",
    "zod": "^4.1.11"
  },
  "devDependencies": {
    "@jest-mock/express": "^3.0.0",
    "@jest/globals": "^30.2.0",
    "@types/ejs": "^3.1.5",
    "@types/express": "^5.0.5",
    "@types/luxon": "^3.7.1",
    "@types/node": "^22.15.3",
    "firebase-tools": "^14.23.0",
    "jest": "^30.2.0",
    "mockdate": "^3.0.5",
    "nodemon": "^3.1.10",
    "ts-jest": "^29.3.2",
    "tsc-alias": "^1.8.15",
    "tsx": "^4.19.4",
    "typescript": "^5.8.3"
  }
}
