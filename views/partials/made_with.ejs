    padding: 10px 15px;
  }

  .info {
    position: fixed;
    bottom: 0;
    width: 100%;
    text-align: center;
  }
</style>


<div
  x-data="{
    emoji: 'â¤',
    emojis: [
      'ðŸœ',
      'ðŸ•',
      'ðŸ”',
      'ðŸ¦‡',
      'ðŸŽƒ',
      'ðŸ‘»',
      'ðŸ¬',
      'ðŸ±',
      'ðŸ¶',
      'ðŸ‘½',
      'ðŸš€',
      'ðŸ‘¾',
    ],
    randomEmoji() {
      return this.emojis[Math.floor(Math.random() * this.emojis.length)];
    },
    init: function (firstInit = true, groups = 1, duration = 1) {
      const spinner = document.querySelector('.spinner');

      if (firstInit) {
        spinner.dataset.spinned = '0';
      } else if (spinner.dataset.spinned === '1') {
        return;
      }

      const emojis = spinner.querySelector('.emojis');
      const emojisClone = emojis.cloneNode(false);
      const pool = [this.emoji];

      if (!firstInit) {
        const arr = [];
        for (let n = 0; n < (groups > 0 ? groups : 1); n++) {
          arr.push(...this.emojis);
        }
        pool.push(...this.shuffle(arr));

        emojisClone.addEventListener(
          'transitionstart',
          function () {
            spinner.dataset.spinned = '1';
            this.querySelectorAll('.emoji').forEach((emoji) => {
              emoji.style.filter = 'blur(1px)';
            });
          },
          { once: true }
        );

        emojisClone.addEventListener(
          'transitionend',
          function () {
            this.querySelectorAll('.emoji').forEach((emoji, index) => {
              emoji.style.filter = 'blur(0)';
              if (index > 0) this.removeChild(emoji);
            });
          },
          { once: true }
        );
      }

      for (let i = pool.length - 1; i >= 0; i--) {
        const emoji = document.createElement('div');
        emoji.classList.add('emoji');
        emoji.style.width = spinner.clientWidth + 'px';
        emoji.style.height = spinner.clientHeight + 'px';
        emoji.textContent = pool[i];
        emojisClone.appendChild(emoji);
      }
      emojisClone.style.transitionDuration = `${duration > 0 ? duration : 1}s`;
      emojisClone.style.transform = `translateY(-${spinner.clientHeight * (pool.length - 1)}px)`;
      spinner.replaceChild(emojisClone, emojis);
    },

    spin: async function() {
      this.init(false, 1, 2);

      const spinner  = document.querySelector('.spinner');
      const emojis = spinner.querySelector('.emojis');

      await new Promise((resolve) => setTimeout(resolve, 1));

      emojis.style.transform = 'translateY(0)';
    },

    shuffle: function ([...arr]) {
      let m = arr.length;
      while (m) {
        const i = Math.floor(Math.random() * m--);
        [arr[m], arr[i]] = [arr[i], arr[m]];
      }
      return arr;
    }
  }"
  x-init="init()"
  class="flex items-center my-20 space-x-1"
>

<div class="spinner">
  <div class="emojis">
  </div>
</div>

<div class="buttons">
  <button id="spinner" @click="spin">Play</button>
  <button id="reseter" @click="init">Reset</button>
</div>
