<div :class="`px-3 max-w-lg lg:px-5 sm:${movieSizeClasses(week)}`">
  <div class="flex flex-col px-4 py-2 rounded-md shadow-sm bg-violet-200">
    <h4 class="flex items-center justify-between h-12 md:px-2">
      <span
        x-text="movie.title"
        :class="titleSize(movie) + ' overflow-hidden font-medium text-center overflow-ellipsis'"
      ></span>


      <% if (showEventDetails) { %>
        <span
          x-show="movie.time"
          x-text="movie.time.replace(/ /g, '\u00a0')"
          class="text-md overflow-hidden font-medium text-center bg-violet-700 text-white px-2 py-0.5 rounded-2xl"
        ></span>
      <% } else { %>
        <span><!-- Empty span to Retain formatting --></span>
      <% } %>
    </h4>

    <div class="flex flex-col justify-between flex-1">
      <div class="relative mt-2">
        <% if (showEventDetails) { %>
          <%- include('movie/field_trip_banner'); %>
        <% } %>

        <a
          :href="movie.url"
          class="w-full"
        >
          <img
            :src="movie.posterUrl"
            :alt="movie.title + ' Poster'"
            class="w-full"
          >
        </a>
      </div>

      <span class="flex justify-between mt-2">
        <span
          class="font-medium text-md text-slate-700"
          x-text="movie.director"
        ></span>

        <div class="flex space-x-2">
          <%- include('icon_label', { icon: 'calendar', field: 'year' }); %>

          <%- include('icon_label', { icon: 'clock', field: 'displayLength' }); %>
        </div>
      </span>
    </div>
  </div>
</div>
