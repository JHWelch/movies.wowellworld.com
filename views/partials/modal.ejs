<div
  x-data="{
    open: false,
    week: {},
    errors: {
      name: '',
      email: '',
      plusOne: '',
    },
    message: null,
    rsvpBody: {
      name: '',
      email: '',
      plusOne: false,
    },
    handleErrors: function(data) {
      if (data.errors) {
        this.errors = data.errors
      }
      if (data.message) {
        this.message = data.message
      }
    },
    rsvp: async function() {
      const response = await fetch('/api/weeks/' + this.week.weekId + '/rsvp' , {
        method: 'POST',
        headers: {
          'Accept': 'application/json',
          'Content-Type': 'application/json',
        },
        body: JSON.stringify(this.rsvpBody),
      });

      const data = await response.json();

      if (!response.ok) {
        this.handleErrors(data);

        return
      }

      $dispatch('close-modal')
      $dispatch('fire-confetti')
    }
  }"
  x-cloak
  x-show="open"
  x-transition:enter="ease-out duration-300"
  x-transition:enter-start="opacity-0"
  x-transition:enter-end="opacity-100"
  x-transition:leave="ease-in duration-200"
  x-transition:leave-start="opacity-100"
  x-transition:leave-end="opacity-0"
  x-on:open-modal.window="week = $event.detail.week; open = true"
  x-on:close-modal.window="open = false"
  x-id="['modal-title']"
  :aria-labelledby="$id('modal-title')"
  class="relative z-10"
  aria-labelledby="modal-title"
  role="dialog"
  aria-modal="true"
>
  <div class="fixed inset-0 transition-opacity bg-gray-500 bg-opacity-75"></div>

  <div
    @click="open = false"
    class="fixed inset-0 z-10 overflow-y-auto"
    @keyup.escape.window="open = false"
  >
    <div class="flex items-end justify-center min-h-full p-4 text-center sm:items-center sm:p-0">
      <div
        x-id="['modal-title']"
        x-on:click.stop
        x-show="open"
        x-transition:enter="ease-out duration-300"
        x-transition:enter-start="opacity-0 translate-y-4 sm:translate-y-0 sm:scale-95"
        x-transition:enter-end="opacity-100 translate-y-0 sm:scale-100"
        x-transition:leave="ease-in duration-200"
        x-transition:leave-start="opacity-100 translate-y-0 sm:scale-100"
        x-transition:leave-end="opacity-0 translate-y-4 sm:translate-y-0 sm:scale-95"
        role="dialog"
        aria-modal="true"
        :aria-labelledby="$id('modal-title')"
        class="relative px-4 pt-5 pb-4 overflow-hidden text-left transition-all transform bg-white rounded-lg shadow-xl sm:my-8 sm:w-full sm:max-w-lg sm:p-6"
      >
        <div>
          <div class="flex items-center justify-center w-12 h-12 mx-auto rounded-full bg-violet-100">
            <%- include('icons/rsvp', { htmlClass: 'w-6 h-6 text-violet-600' }) %>
          </div>

          <div class="mt-3 text-center sm:mt-5">
            <h3
              id="modal-title"
              class="text-base font-semibold leading-6 text-gray-900"
            >
              <span class="text-violet-500">RSVP to:</span>

              <span x-text="week?.theme"></span>
            </h3>

            <div class="mt-2">
              <p class="text-sm text-gray-500">
                Let us know you are coming! Bring a friend if you like. We usually order or make some food, let us know if you're interested in getting in on that. Hope to see you soon.
              </p>
            </div>
          </div>
        </div>

        <form class="space-y-4">
          <div>
            <label
              for="name"
              class="block text-sm font-medium leading-6 text-gray-900"
            >Name</label>

            <input
              x-model="rsvpBody.name"
              type="text"
              name="name"
              id="name"
              required
              class="block w-full rounded-md border-0 py-1.5 text-gray-900 shadow-sm ring-1 ring-inset ring-gray-300 placeholder:text-gray-400 focus:ring-2 focus:ring-inset focus:ring-violet-600 sm:text-sm sm:leading-6"
              placeholder="Ghostface"
            >
          </div>

          <div>
            <label
              for="email"
              class="block text-sm font-medium leading-6 text-gray-900"
            >Email</label>

            <div class="mt-2">
              <input
                x-model="rsvpBody.email"
                type="email"
                name="email"
                id="email"
                required
                class="block w-full rounded-md border-0 py-1.5 text-gray-900 shadow-sm ring-1 ring-inset ring-gray-300 placeholder:text-gray-400 focus:ring-2 focus:ring-inset focus:ring-violet-600 sm:text-sm sm:leading-6"
                placeholder="ghostface@woodsboroca.gov"
              >
            </div>
          </div>

          <div>
            <label
              for="plus-one"
              class="block text-sm font-medium leading-6 text-gray-900"
            >Plus One?</label>

            <div class="mt-2">
              <input
                x-model="rsvpBody.plusOne"
                type="checkbox"
                name="plus-one"
                id="plus-one"
                required
                class="block mt-2"
              >
            </div>
          </div>
        </form>

        <div class="mt-5 sm:mt-6 sm:grid sm:grid-flow-row-dense sm:grid-cols-2 sm:gap-3">
          <button
            @click="rsvp()"
            type="button"
            class="inline-flex justify-center w-full px-3 py-2 text-sm font-semibold text-white rounded-md shadow-sm bg-violet-600 hover:bg-violet-500 focus-visible:outline focus-visible:outline-2 focus-visible:outline-offset-2 focus-visible:outline-violet-600 sm:col-start-2"
          >RSVP!</button>

          <button
            @click="open = false"
            type="button"
            class="inline-flex justify-center w-full px-3 py-2 mt-3 text-sm font-semibold text-gray-900 bg-white rounded-md shadow-sm ring-1 ring-inset ring-gray-300 hover:bg-gray-50 sm:col-start-1 sm:mt-0"
          >Cancel</button>
        </div>
      </div>
    </div>
  </div>
</div>
