// The production tsconfig for this project is tsconfig.build.json
// This tsconfig.json file is used for proper IDE intellisense and path aliasing
{
  "extends": "./tsconfig.build.json",
  "compilerOptions": {
    "paths": {
      "@server/*": [
        "./src/server/*"
      ],
      "@shared/*": [
        "./src/shared/*"
      ],
      "@tests/*": [
        "./src/server/__tests__/*"
      ],
      "@mocks/*": [
        "./__mocks__/*"
      ]
    }
  },
  "include": [
    "src/**/*.ts",
    "../shared/**/*.ts",
    "__tests__/**/*.ts",
  ],
}
